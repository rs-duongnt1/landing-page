{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./webui/src/*"]
    }
  },
  "include": ["webui/src/**/*.ts", "webui/src/**/*.vue", "typings/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
